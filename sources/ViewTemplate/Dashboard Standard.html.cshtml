<h3 class="page-title">
  @Model.Definition.Plural
</h3>
<div id="entity-view-list" class="row" data-bind="foreach: views">
  <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
    <div data-bind="attr : {'class': 'dashboard-stat ' + $root.getMetronicColor(TileColour) }">
      <div class="visual">
        <i class="fa fa-comments" data-bind="attr :{class : IconClass}"></i>
      </div>
      <div class="details">
        <div class="number" data-bind="text: CountMessage">
          1000
        </div>
        <div class="desc" data-bind="text:Name">
        </div>
      </div>
      <a class="more" data-bind="attr:{href : '#' + Route(), 'title' : Note}">
            View more <i class="m-icon-swapright m-icon-white"></i>
      </a>
    </div>
  </div>
</div>

<div class="clearfix">
</div>
<div class="row" data-bind="foreach:charts">

  <div class="col-md-6 col-sm-6">
    <!-- BEGIN PORTLET-->
    <div class="portlet light ">
      <div class="portlet-title">
        <div class="caption">
          <i class="icon-bar-chart font-green-sharp hide"></i>
          <span class="caption-subject font-green-sharp bold uppercase" data-bind="text:Name">Charts Name</span>
          <span class="caption-helper" data-bind="text:Entity"></span>
        </div>

        <div class="actions">
          <div class="btn-group btn-group-devided" data-toggle="buttons">
            <label class="btn btn-transparent grey-salsa btn-circle btn-sm active">
              <a href="#" class="unpin-chart" title="Unpin from homepage">
                <span class="glyphicon glyphicon-pushpin pull-right"></span>
              </a>
            </label>
          </div>
        </div>

      </div>
      <div class="portlet-body">
        <div class="chart-wrapper">
          <div data-bind="chart:$data"></div>

        </div>
      </div>
    </div>
    <!-- END PORTLET-->
  </div>


</div>
