@model web.sph.App_Code.JpaLoginModel
@{
    ViewBag.Title = "Log in";
    Layout = null;
}
@using System.Web.Mvc.Html
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SPH</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/site.css" rel="stylesheet" />
    <link href="/content/durandal.css" rel="stylesheet" />
    <link href="/content/external/font-awesome.min.css" rel="stylesheet" />
    <link href="/kendo/styles/kendo.common.css" rel="stylesheet" />
    <link href="/kendo/styles/kendo.metro.css" rel="stylesheet" />

</head>
<body>
    <div id="body" class="container">

        <section>

          <form action="/jpa-account/login" method="post">

                <div class="row">
                    @Html.Partial("_Slider")
                    <div class="col-lg-4 col-lg-offset-2 login-form">
                        <div class="logo">
                            <img src="/Images/sph_32x32.png" alt="logo"/>
                        </div>
                        <h2>Login Page</h2>
                        @if (!@ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <a class="close" data-dismiss="alert" href="#">&times;</a>
                                Incorrect userName or password!
                            </div>

                        }
                        <form method="POST" action="" accept-charset="UTF-8">
                            @Html.TextBoxFor(m => m.UserName, new {placeholder = "UserName", @class = "form-control", required = true, autofocus = "autofocus"})
                            @Html.ValidationMessageFor(m => m.UserName)
                            <label class="controls"></label>
                            @Html.PasswordFor(m => m.Password, new {placeholder = "Password", @class = "form-control", required = true})
                            @Html.ValidationMessageFor(m => m.Password)
                            <label class="checkbox">
                                <input type="checkbox" name="remember" value="1">
                                Remember me
                            </label>

                            <input type="hidden" value="" name="ReturnUrl"/>
                            <button type="submit" name="submit" class="btn btn-default">Login</button>
                        </form>

                        <div>
                            <p>
                                <a href="@Url.Action("ForgotPassword")">Forgot your password</a>
                            </p>
                        </div>
                    </div>

                </div>


                @Html.Partial("_Footer")

            </form>
        </section>
    </div>


    <script src="~/Scripts/__vendor.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.carousel').carousel({
                interval: 2000
            });
            var retUrl = getParameterByName("ReturnUrl") + window.location.hash;
            $('input[name=ReturnUrl]').val(retUrl);

            function getParameterByName(name) {
                name = name.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
                var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                    results = regex.exec(location.search);
                return results == null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
            }
        });
    </script>
</body>
</html>
